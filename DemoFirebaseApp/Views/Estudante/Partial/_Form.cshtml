@model DemoFirebase.Infra.Models.Firestore.Estudante

@for (int i = 0; i < Model.Livros.Count(); i++)
{
    @Html.HiddenFor(model => Model.Livros[i])
}

@foreach (var item in Model.Livros)
{
    <p>@item</p>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Matricula" class="control-label"></label>
    <input asp-for="Matricula" class="form-control" />
    <span asp-validation-for="Matricula" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Nome" class="control-label"></label>
    <input asp-for="Nome" class="form-control" />
    <span asp-validation-for="Nome" class="text-danger"></span>
</div>
<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
    </label>
</div>
